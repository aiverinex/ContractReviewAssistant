# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Optional: OpenAI Organization ID (if applicable)
# OPENAI_ORG_ID=your-org-id-here

# Application Configuration
# Set to 'development' for verbose logging, 'production' for minimal logs
ENVIRONMENT=development

# Output Configuration  
# Directory where review results will be saved
OUTPUT_DIRECTORY=./output

# File Processing Configuration
# Maximum file size for processing (in MB)
MAX_FILE_SIZE_MB=10

# CrewAI Configuration
# Enable/disable verbose agent output
CREW_VERBOSE=true

# Performance Tuning
# Maximum number of retries for API calls
MAX_API_RETRIES=3

# API rate limiting (requests per minute)
API_RATE_LIMIT=50

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable/disable saving of processing logs
SAVE_LOGS=true
